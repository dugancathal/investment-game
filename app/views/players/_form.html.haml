= simple_nested_form_for @player, :html => { :class => 'form-horizontal' } do |f|
  = f.input :email

  = f.input :config_file, label: 'Configuration File', as: :file

  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), players_path, :class => 'btn'
